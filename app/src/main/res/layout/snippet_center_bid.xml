<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bid_sv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lelang1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/bid_iv_userPhoto"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kelvinap"
                    android:id="@+id/bid_tv_username"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/lelang1"
                android:layout_marginBottom="20dp"
                android:id="@+id/bid_iv_itemPhoto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supra-X 125cc Helm In"
                android:textSize="18dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:layout_marginBottom="5dp"
                android:id="@+id/bid_tv_namaItem"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loremIpsum"
                android:textSize="14dp"
                android:layout_gravity="left|right"
                android:layout_marginBottom="5dp"
                android:id="@+id/bid_tv_descItem"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp : "
                    android:id="@+id/bid_tv1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/05/2018 12.00"
                    android:id="@+id/bid_tv_expDate"
                    android:layout_toRightOf="@+id/bid_tv1"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest Bid : "
                    android:textSize="16dp"
                    android:gravity="end"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 200.000 "
                    android:textSize="16dp"
                    android:gravity="end"
                    android:textColor="@color/green"
                    android:id="@+id/bid_tv_highprice"/>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bid"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_button_bid"
                android:id="@+id/bid_btn_bid"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bid History"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/garis_abu">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bidHistory_rv_history">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </ScrollView>
</merge>